APP_NAME=SIAP
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# Database (MySQL - App)
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=asset_management
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# HRIS Database (SQL Server - READ ONLY)
# ============================================
# WARNING: This connection is for HRIS sync only.
# Never query HRIS from UI/API at runtime.
DB_HRIS_HOST=hris-server.company.local
DB_HRIS_PORT=1433
DB_HRIS_DATABASE=hris_production
DB_HRIS_USERNAME=asset_readonly
DB_HRIS_PASSWORD=
DB_HRIS_ENCRYPT=no
DB_HRIS_TRUST_CERT=true

# ============================================
# Session & Cache
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database

# ============================================
# Queue & Redis
# ============================================
QUEUE_CONNECTION=database
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# Filesystem
# ============================================
FILESYSTEM_DISK=local

# MinIO (Optional - for asset attachments)
# FILESYSTEM_DISK=minio
# MINIO_ENDPOINT=http://127.0.0.1:9000
# MINIO_KEY=minio
# MINIO_SECRET=minio123
# MINIO_BUCKET=assets
# MINIO_USE_PATH_STYLE=true

# ============================================
# Mail
# ============================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@company.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Sanctum
# ============================================
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# ============================================
# Error Tracking (Optional)
# ============================================
# LOG_SLACK_WEBHOOK_URL=

VITE_APP_NAME="${APP_NAME}"
